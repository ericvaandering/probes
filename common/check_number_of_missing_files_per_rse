"""
Probe to check the number of missing files per rse.
"""

import sys
import traceback

from rucio.core import monitor
from rucio.db.sqla.session import BASE, get_session

# Exit statuses
OK, WARNING, CRITICAL, UNKNOWN = 0, 1, 2, 3

if BASE.metadata.schema:
    schema = BASE.metadata.schema + '.'
else:
    schema = ''

if __name__ == "__main__":
    try:
        session = get_session()
        sql = 'SELECT rse_expression, (sum(length*copies) - sum(locks_ok_cnt)) as missing_files  from {schema}DIDS join {schema}RULES on DIDS.name = RULES.name where state!=\'O\' and (length !=locks_ok_cnt ) and length is not null and locks_ok_cnt is not null group by rse_expression'.format(schema=schema)
        result = session.execute(sql).fetchall()
        for rse, missing_files in result:
            monitor.record_gauge(stat='judge.number_of_missing_files.%s' %rse, value=missing_files)
    except:
        print traceback.format_exc()
        sys.exit(UNKNOWN)
    sys.exit(OK)

